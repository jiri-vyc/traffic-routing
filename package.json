{
    "scripts": {
        "start": "node -r dotenv/config .\\dist\\Server.js",
        "build-start": "tsc && node .\\dist\\Server.js",
        "build": "tsc",
        "dev-start": "ts-node-dev -r dotenv/config .\\src\\Server.ts",
        "test": "ava --verbose"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validator": "^6.4.1",
        "morgan": "^1.10.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/morgan": "^1.9.0",
        "ava": "^3.8.2",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.9.2"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "failFast": false,
        "files": [
            "test/**/*.test.ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
